<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.*?>


<?import javafx.scene.layout.BorderPane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="com.example.minesweeper.BoardController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="0.0">
            <top>
                <MenuBar>
                    <Menu text="Application">
                        <MenuItem text="Create" onAction="#ApplicationCreate"/>
                        <MenuItem text="Load" onAction="#ApplicationLoad"/>
                        <MenuItem text="Start" onAction="#ApplicationStart"/>
                    </Menu>
                    <Menu text="Details">
                        <MenuItem text="Rounds" onAction="#DetailsRounds"/>
                        <MenuItem text="Solution" onAction="#DetailsSolution"/>
                    </Menu>
                </MenuBar>
            </top>
        </BorderPane>
        <GridPane fx:id="TheBoard" alignment="BASELINE_CENTER" AnchorPane.bottomAnchor="130.0"
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">
        </GridPane>
        <HBox alignment="BOTTOM_LEFT" fillHeight="false" layoutX="14.0" layoutY="560.0" AnchorPane.bottomAnchor="20.0"
              AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="700.0" AnchorPane.topAnchor="560.0">
            <children>
                <Button fx:id="ResetBoard" mnemonicParsing="false" onAction="#ResetBoard" text="Reset" textFill="RED">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <Label fx:id="winLose" layoutX="796.0" layoutY="535.0" text="Label" AnchorPane.bottomAnchor="100.0"
               AnchorPane.rightAnchor="200.0">
            <font>
                <Font name="System Bold" size="35.0"/>
            </font>
            <textFill>
                <LinearGradient endX="1.0" endY="1.0">
                    <stops>
                        <Stop color="RED"/>
                        <Stop color="#00e1ff" offset="1.0"/>
                    </stops>
                </LinearGradient>
            </textFill>
        </Label>
    </children>
</AnchorPane>
